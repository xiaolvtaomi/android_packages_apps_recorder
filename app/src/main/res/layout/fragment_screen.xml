<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:contentPaddingBottom="16dp"
        app:contentPaddingLeft="8dp"
        app:contentPaddingRight="8dp"
        app:contentPaddingTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/screen_card_audio_title"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:paddingEnd="36dp"
                android:text="@string/screen_audio_title"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:foregroundGravity="center_vertical"
                android:padding="6dp"
                android:src="@drawable/ic_audio" />

            <RelativeLayout
                android:id="@+id/screen_warning_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/screen_card_audio_title"
                android:paddingTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/screen_warning_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="@string/screen_audio_warning_message"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/screen_request_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/screen_warning_message"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="@string/screen_audio_warning_button_ask"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/screen_toggle_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/screen_card_audio_title"
                android:paddingTop="8dp">

                <Switch
                    android:id="@+id/screen_toggle_audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/screen_audio_message_off"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
